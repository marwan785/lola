        <TextBox Name="gr_tx" HorizontalAlignment="Center" Margin="0,189,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="144"/>
        <Button Content="log in" HorizontalAlignment="Center" Margin="0,254,0,0" VerticalAlignment="Top" Click="Button_Click"/>

        <Label Content="password" Margin="223,217,485,199" FontSize="18"/>
        <TextBox Name="p_tx" HorizontalAlignment="Center" Margin="0,225,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="144"/>

    </Grid>
