        <Label Content="sign up for studnet" Height="50" FontSize="22" Margin="287,23,303,377"/>
        <Label Content="name" FontSize="16" Margin="265,101,480,278"/>
        <TextBox x:Name="name_tx" HorizontalAlignment="Center" Margin="0,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="144"/>

